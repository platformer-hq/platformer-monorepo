{
  "private": true,
  "scripts": {
    "ci:admin-panel:build": "turbo run build --filter=\"./apps/admin-panel\"",
    "ci:admin-panel:deploy": "turbo run ci:deploy --filter=\"./apps/admin-panel\"",
    "ci:mini-apps:build": "pnpm run mini-apps:build",
    "ci:mini-apps:deps": "pnpm i --filter=\"./mini-apps/*\"",
    "ci:mini-apps:lint": "pnpm run mini-apps:lint",
    "ci:mini-apps:rollout": "pnpm run ci:mini-apps:deps && pnpm run ci:mini-apps:build && pnpm run ci:mini-apps:lint && pnpm run ci:mini-apps:typecheck && pnpm run ci:mini-apps:test",
    "ci:mini-apps:test": "vitest --run",
    "ci:mini-apps:typecheck": "pnpm run mini-apps:typecheck",
    "ci:telegram-launcher:build": "turbo run build --filter=\"./apps/telegram-launcher\"",
    "codegen": "graphql-codegen --config graphql-codegen.ts",
    "codegen:watch": "graphql-codegen --config graphql-codegen.ts --watch",
    "docs:dev": "turbo run dev --filter=\"./apps/docs\"",
    "mini-apps:build": "turbo run build --filter=\"./mini-apps/*\"",
    "mini-apps:lint": "turbo run lint --filter=\"./mini-apps/*\"",
    "mini-apps:lint:fix": "turbo run lint:fix --filter=\"./mini-apps/*\"",
    "mini-apps:test": "vitest --run --retry 3",
    "mini-apps:typecheck": "turbo run typecheck --filter=\"./mini-apps/*\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.23.0",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typed-document-node": "^5.1.1",
    "@graphql-codegen/typescript-operations": "^4.5.1",
    "@graphql-codegen/visitor-plugin-common": "^5.8.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@turbo/gen": "^2.3.3",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "eslint-plugin-solid": "^0.14.5",
    "gh-pages": "^6.1.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-mkcert": "^1.17.8",
    "vite-plugin-solid": "^2.11.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  },
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "name": "platformer-monorepo",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
