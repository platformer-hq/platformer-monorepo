{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "ci:deploy": {
      "passThroughEnv": [
        "ADMIN_PANEL_MATE_TOKEN",
        "ADMIN_PANEL_MATE_PROJECT_ID"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "rollout": {
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "typecheck": {
      "cache": true
    }
  }
}
